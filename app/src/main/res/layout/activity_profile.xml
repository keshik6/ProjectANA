<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="sutdcreations.projectana.ProfileActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/settingsTF"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="PROFILE"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="30sp"
        android:fontFamily="@font/moon_bold" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settingsTF"
        android:layout_marginTop="20dp"
        android:contentDescription="studentPhoto"
        android:src="@drawable/sadface"
         />

    <LinearLayout
        android:id="@+id/Linlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/NameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Full Name: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="15sp"
            android:fontFamily="@font/opensans_semibold" />

        <TextView
            android:id="@+id/NameTF"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Linlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/CourseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Courses: "
            android:fontFamily="@font/opensans_semibold"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/CoursesTF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Linlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/QuestionsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Questions: "
            android:fontFamily="@font/opensans_semibold"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/NoOfQuestionsTF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Linlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/ReplyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Replies: "
            android:fontFamily="@font/opensans_semibold"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/NoOfRepliesTF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Linlayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/GradesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Participation Grade: "
            android:fontFamily="@font/opensans_semibold"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/GradesTF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true" />
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Light"
        android:layout_marginTop="101dp"
        app:itemIconTint="#000000"
        app:itemTextColor="#000000"
        app:menu="@menu/navigation" />

</LinearLayout>
