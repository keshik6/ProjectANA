<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sutdcreations.projectana">

    <application
        android:name=".GlobalData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="Login Page">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".QuestionListActivity"
            android:label="@string/title_question_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QuestionDetailActivity"
            android:label="@string/title_question_detail"
            android:parentActivityName=".QuestionListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sutdcreations.projectana.QuestionListActivity" />
        </activity>
        <activity
            android:name=".FeedbackActivity"
            android:label="@string/title_activity_feedback"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SnoopActivity"
            android:label="@string/title_activity_snoop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DatabaseMgmtActivity"></activity>
        <activity android:name=".CourseTopicActivity"></activity>
    </application>

</manifest>